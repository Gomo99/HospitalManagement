@using HospitalManagement.AppStatus
@using HospitalManagement.ViewModel
@model ViewProfileViewModel

@{
    ViewData["Title"] = "My Profile";
    var isDarkMode = ViewBag.IsDarkMode as bool? ?? false;
    var themeStatus = isDarkMode ? "Dark mode" : "Light mode";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Profile Header -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-user-circle me-2"></i>My Profile
                    </h4>
                    <div>
                        <a asp-action="EditProfile" class="btn btn-light btn-sm">
                            <i class="fas fa-edit me-1"></i>Edit Profile
                        </a>
                        <a asp-action="DownloadProfilePdf" class="btn btn-light btn-sm">
                            <i class="fas fa-download me-1"></i>Download PDF
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <!-- Profile Info -->
                        <div class="col-md-6">
                            <div class="mb-4">
                                <h5 class="border-bottom pb-2">
                                    <i class="fas fa-info-circle me-2"></i>Personal Information
                                </h5>
                                <dl class="row">
                                    <dt class="col-sm-5">Full Name</dt>
                                    <dd class="col-sm-7">@Model.FirstName @Model.LastName</dd>

                                    <dt class="col-sm-5">Username</dt>
                                    <dd class="col-sm-7">@Model.UserName</dd>

                                    <dt class="col-sm-5">Email</dt>
                                    <dd class="col-sm-7">@Model.Email</dd>

                                    <dt class="col-sm-5">Gender</dt>
                                    <dd class="col-sm-7">@Model.Gender</dd>

                                    <dt class="col-sm-5">Role</dt>
                                    <dd class="col-sm-7">
                                        <span class="badge bg-primary">@Model.Role</span>
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <!-- Account Status -->
                        <div class="col-md-6">
                            <div class="mb-4">
                                <h5 class="border-bottom pb-2">
                                    <i class="fas fa-shield-alt me-2"></i>Account Status
                                </h5>
                                <dl class="row">
                                    <dt class="col-sm-5">Account Status</dt>
                                    <dd class="col-sm-7">
                                        @if (Model.IsActive == Status.Active)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Active
                                            </span>
                                        }
                                        else if (Model.IsActive == Status.Inactive)
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-exclamation-circle me-1"></i>Inactive
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times-circle me-1"></i>Deactivated
                                            </span>
                                        }
                                    </dd>

                                    <dt class="col-sm-5">Hire Date</dt>
                                    <dd class="col-sm-7">@Model.HireDate?.ToString("yyyy-MM-dd")</dd>

                                    <dt class="col-sm-5">2FA Status</dt>
                                    <dd class="col-sm-7">
                                        @if (Model.IsTwoFactorEnabled)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-lock me-1"></i>Enabled
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-lock-open me-1"></i>Disabled
                                            </span>
                                        }
                                    </dd>

                                    <dt class="col-sm-5">Theme</dt>
                                    <dd class="col-sm-7">
                                        <span class="badge bg-info">@Model.ThemePreference</span>
                                        <small class="text-muted ms-1">(@themeStatus active)</small>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>Security Settings
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a asp-action="ChangePassword" class="btn btn-outline-primary">
                                    <i class="fas fa-key me-2"></i>Change Password
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid">
                                @if (Model.IsTwoFactorEnabled)
                                {
                                    <a asp-action="DisableTwoFactor" class="btn btn-outline-warning">
                                        <i class="fas fa-lock-open me-2"></i>Disable 2FA
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="SetupTwoFactor" class="btn btn-outline-success">
                                        <i class="fas fa-lock me-2"></i>Setup 2FA
                                    </a>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a asp-action="ChangeEmail" class="btn btn-outline-info">
                                    <i class="fas fa-envelope me-2"></i>Change Email
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a asp-action="ManageTrustedDevices" class="btn btn-outline-secondary">
                                    <i class="fas fa-desktop me-2"></i>Trusted Devices
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Theme Preferences Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header" style="background-color: var(--primary-color); color: white;">
                    <h5 class="mb-0">
                        <i class="fas fa-palette me-2"></i>Theme Preferences
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="card-text mb-1">
                                Current Theme: <span class="badge bg-primary">@Model.ThemePreference</span>
                            </p>
                            <small class="text-muted">Currently active: @themeStatus</small>
                        </div>
                        <a asp-action="ThemeSettings" class="btn btn-outline-primary">
                            <i class="fas fa-cog me-1"></i>Customize Theme
                        </a>
                    </div>
                </div>
            </div>

            <!-- Account Management Card -->
            <div class="card shadow-sm mb-4 border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Account Management
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Warning:</strong> These actions are irreversible.
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a asp-action="DeactivateAccount" class="btn btn-outline-danger">
                                    <i class="fas fa-user-slash me-2"></i>Deactivate Account
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a asp-action="Logout" class="btn btn-outline-secondary">
                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Dashboard Navigation -->
            <div class="text-center mt-4">
                <a asp-action="Dashboard" class="btn btn-primary btn-lg">
                    <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Theme preview
        const currentTheme = localStorage.getItem('theme') || '@Model.ThemePreference';
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Current theme:', currentTheme);
        });
    </script>
}