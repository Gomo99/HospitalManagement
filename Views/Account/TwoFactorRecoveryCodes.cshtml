@using HospitalManagement.ViewModel
@model TwoFactorSetupViewModel

@{
    ViewData["Title"] = "Two-Factor Recovery Codes";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-success">
                <div class="card-header bg-success text-white py-4">
                    <h3 class="text-center mb-0">
                        <i class="fas fa-key fa-2x me-3"></i>Save Your Recovery Codes
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fas fa-shield-alt fa-4x text-success mb-3"></i>
                        <h4>Two-Factor Authentication Enabled Successfully!</h4>
                        <p class="text-muted">
                            Save these recovery codes in a safe place.
                        </p>
                    </div>

                    <div class="alert alert-warning mb-4">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>Important!
                        </h5>
                        <p class="mb-0">
                            Recovery codes are used to access your account if you lose your authenticator device.
                            Each code can only be used once.
                        </p>
                    </div>

                    <!-- Recovery Codes Display -->
                    <div class="card mb-4 border-info">
                        <div class="card-header bg-info text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="fas fa-key me-2"></i>Your Recovery Codes
                                </h5>
                                <button class="btn btn-light btn-sm" onclick="printCodes()">
                                    <i class="fas fa-print me-1"></i>Print
                                </button>
                            </div>
                        </div>
                        <div class="card-body" id="recoveryCodesContainer">
                            <div class="row g-2 text-center">
                                @for (int i = 0; i < Model.RecoveryCodes.Count(); i++)
                                {
                                    <div class="col-md-6">
                                        <div class="p-3 border rounded bg-light mb-2 recovery-code">
                                            <code style="font-size: 1.2rem; letter-spacing: 0.1em;">
                                                @Model.RecoveryCodes.ElementAt(i)
                                            </code>
                                            <small class="text-muted d-block mt-1">Code @(i + 1)</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Copy and Download Options -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <button class="btn btn-outline-primary w-100" onclick="copyAllCodes()">
                                <i class="fas fa-copy me-2"></i>Copy All Codes
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button class="btn btn-outline-secondary w-100" onclick="downloadCodes()">
                                <i class="fas fa-download me-2"></i>Download as Text
                            </button>
                        </div>
                    </div>

                    <!-- Instructions -->
                    <div class="alert alert-info mb-4">
                        <h5 class="alert-heading">
                            <i class="fas fa-info-circle me-2"></i>How to Use Recovery Codes
                        </h5>
                        <ol class="mb-0">
                            <li>Store these codes in a safe place (password manager, printed copy)</li>
                            <li>When prompted for 2FA code, enter a recovery code instead</li>
                            <li>Each code can only be used once</li>
                            <li>Generate new codes if you run out or suspect compromise</li>
                            <li>Codes do not expire until used</li>
                        </ol>
                    </div>

                    <!-- Completion -->
                    <div class="text-center">
                        <div class="d-grid gap-2">
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" id="confirmSaved">
                                <label class="form-check-label" for="confirmSaved">
                                    I have saved my recovery codes in a safe place
                                </label>
                            </div>
                            <a asp-action="ViewProfile" class="btn btn-success btn-lg" id="completeBtn">
                                <i class="fas fa-check-circle me-2"></i>Complete Setup
                            </a>
                        </div>
                    </div>

                    <!-- Warning -->
                    <div class="text-center mt-4">
                        <small class="text-muted">
                            <i class="fas fa-exclamation-circle me-1"></i>
                            You won't be able to see these codes again after leaving this page!
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Prevent leaving page without saving
        window.addEventListener('beforeunload', function (e) {
            if (!document.getElementById('confirmSaved').checked) {
                e.preventDefault();
                e.returnValue = 'You have not confirmed saving your recovery codes. Are you sure you want to leave?';
            }
        });

        // Complete button validation
        document.getElementById('completeBtn').addEventListener('click', function(e) {
            if (!document.getElementById('confirmSaved').checked) {
                e.preventDefault();
                alert('Please confirm that you have saved your recovery codes before continuing.');
                return;
            }
        });

        // Copy all codes to clipboard
        function copyAllCodes() {
            const codes = @Html.Raw(Json.Serialize(Model.RecoveryCodes));
            const codesText = codes.join('\n');

            navigator.clipboard.writeText(codesText).then(() => {
                showNotification('All recovery codes copied to clipboard!', 'success');
            }).catch(err => {
                showNotification('Failed to copy codes. Please try again.', 'danger');
            });
        }

        // Download codes as text file
        function downloadCodes() {
            const codes = @Html.Raw(Json.Serialize(Model.RecoveryCodes));
            const codesText = codes.join('\n');
            const blob = new Blob([codesText], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = '2fa-recovery-codes.txt';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);

            showNotification('Recovery codes downloaded!', 'success');
        }

        // Print codes
        function printCodes() {
            const printContent = document.getElementById('recoveryCodesContainer').innerHTML;
            const originalContent = document.body.innerHTML;

            document.body.innerHTML = `
                <div class="container mt-5">
                    <h1 class="text-center mb-4">Two-Factor Recovery Codes</h1>
                    <p class="text-center mb-4">Generated on: ${new Date().toLocaleDateString()}</p>
                    <div class="alert alert-warning">
                        <strong>Important:</strong> Store this document in a safe place. Each code can only be used once.
                    </div>
                    ${printContent}
                    <hr class="my-4">
                    <small class="text-muted">
                        These codes are for ${document.title}. Keep them secure.
                    </small>
                </div>
            `;

            window.print();
            document.body.innerHTML = originalContent;
        }

        // Show notification
        function showNotification(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';

            const notification = document.createElement('div');
            notification.className = `alert ${alertClass} alert-dismissible fade show position-fixed`;
            notification.style.bottom = '20px';
            notification.style.right = '20px';
            notification.style.zIndex = '9999';
            notification.style.minWidth = '300px';

            notification.innerHTML = `
                <i class="fas ${icon} me-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            document.body.appendChild(notification);

            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 3000);
        }

        // Auto-highlight code when clicked
        document.querySelectorAll('.recovery-code').forEach(codeDiv => {
            codeDiv.addEventListener('click', function() {
                const codeElement = this.querySelector('code');
                const range = document.createRange();
                range.selectNode(codeElement);
                window.getSelection().removeAllRanges();
                window.getSelection().addRange(range);

                try {
                    document.execCommand('copy');
                    showNotification('Code copied to clipboard!', 'success');
                } catch (err) {
                    console.log('Failed to copy code');
                }

                window.getSelection().removeAllRanges();
            });
        });
    </script>
}