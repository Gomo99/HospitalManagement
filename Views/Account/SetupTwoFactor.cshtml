@using HospitalManagement.ViewModel
@model TwoFactorSetupViewModel

@{
    ViewData["Title"] = "Setup Two-Factor Authentication";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>Setup Two-Factor Authentication
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Steps -->
                    <div class="mb-5">
                        <h5 class="mb-3">Setup Steps</h5>
                        <div class="row text-center">
                            <div class="col-md-3 mb-3">
                                <div class="step-card step-active">
                                    <div class="step-number">1</div>
                                    <div class="step-title">Download App</div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="step-card">
                                    <div class="step-number">2</div>
                                    <div class="step-title">Scan QR Code</div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="step-card">
                                    <div class="step-number">3</div>
                                    <div class="step-title">Enter Code</div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="step-card">
                                    <div class="step-number">4</div>
                                    <div class="step-title">Save Codes</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Left Column: Instructions -->
                        <div class="col-md-6">
                            <div class="mb-4">
                                <h5 class="mb-3">
                                    <i class="fas fa-mobile-alt me-2"></i>Step 1: Download App
                                </h5>
                                <p>Download one of these authenticator apps on your mobile device:</p>
                                <div class="row g-2 mb-4">
                                    <div class="col-6">
                                        <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2"
                                           target="_blank" class="btn btn-outline-dark w-100 mb-2">
                                            <i class="fab fa-google me-2"></i>Google Authenticator
                                        </a>
                                    </div>
                                    <div class="col-6">
                                        <a href="https://www.microsoft.com/en-us/security/mobile-authenticator-app"
                                           target="_blank" class="btn btn-outline-primary w-100 mb-2">
                                            <i class="fab fa-microsoft me-2"></i>Microsoft Authenticator
                                        </a>
                                    </div>
                                    <div class="col-6">
                                        <a href="https://authy.com/download/"
                                           target="_blank" class="btn btn-outline-info w-100 mb-2">
                                            <i class="fas fa-shield-alt me-2"></i>Authy
                                        </a>
                                    </div>
                                    <div class="col-6">
                                        <a href="https://lastpass.com/auth/"
                                           target="_blank" class="btn btn-outline-warning w-100 mb-2">
                                            <i class="fas fa-key me-2"></i>LastPass Authenticator
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <h5 class="mb-3">
                                    <i class="fas fa-qrcode me-2"></i>Step 2: Scan QR Code
                                </h5>
                                <p>Open your authenticator app and scan this QR code:</p>
                            </div>

                            <div class="mb-4">
                                <h5 class="mb-3">
                                    <i class="fas fa-key me-2"></i>Manual Entry (Optional)
                                </h5>
                                <p>If you can't scan the QR code, enter this key manually:</p>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control"
                                           value="@Model.ManualEntryKey" id="secretKey" readonly>
                                    <button class="btn btn-outline-secondary" type="button"
                                            onclick="copySecretKey()">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </div>
                                <small class="text-muted">Type: Time-based (TOTP)</small>
                            </div>
                        </div>

                        <!-- Right Column: QR Code -->
                        <div class="col-md-6">
                            <div class="text-center mb-4">
                                <div class="qr-code-container p-3 border rounded bg-white d-inline-block">
                                    <img src="@Model.QrCodeImageUrl" alt="QR Code"
                                         class="img-fluid" id="qrCodeImage" style="max-width: 250px;">
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-outline-secondary btn-sm"
                                            onclick="refreshQrCode()">
                                        <i class="fas fa-redo me-1"></i>Refresh QR Code
                                    </button>
                                    <button class="btn btn-outline-secondary btn-sm"
                                            onclick="downloadQrCode()">
                                        <i class="fas fa-download me-1"></i>Download
                                    </button>
                                </div>
                            </div>

                            <!-- Verification Form -->
                            <form asp-action="SetupTwoFactor" method="post" id="setup2faForm">
                                @Html.AntiForgeryToken()

                                <div class="mb-4">
                                    <h5 class="mb-3">
                                        <i class="fas fa-check-circle me-2"></i>Step 3: Verify Setup
                                    </h5>
                                    <p>Enter the 6-digit code from your authenticator app:</p>

                                    <div class="mb-3">
                                        <label asp-for="VerificationCode" class="form-label">
                                            6-Digit Verification Code *
                                        </label>
                                        <div class="input-group">
                                            <input asp-for="VerificationCode" class="form-control text-center"
                                                   placeholder="123456" maxlength="6"
                                                   style="font-size: 1.5rem; letter-spacing: 0.5em;"
                                                   id="verificationCode" />
                                            <button class="btn btn-outline-secondary" type="button"
                                                    onclick="generateTestCode()">
                                                <i class="fas fa-bolt"></i>
                                            </button>
                                        </div>
                                        <span asp-validation-for="VerificationCode" class="text-danger small"></span>
                                        <small class="form-text text-muted">
                                            Enter the code shown in your authenticator app
                                        </small>
                                    </div>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-shield-alt me-2"></i>Verify & Enable 2FA
                                    </button>
                                    <a asp-action="ViewProfile" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-2"></i>Cancel Setup
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Important Notes -->
                    <div class="alert alert-warning mt-4">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>Important Notes
                        </h5>
                        <ul class="mb-0">
                            <li>Keep your authenticator app secure and backed up</li>
                            <li>Save your recovery codes when prompted (next screen)</li>
                            <li>You'll need to enter a code every time you login from an untrusted device</li>
                            <li>You can disable 2FA anytime from your profile settings</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .step-card {
        padding: 15px;
        border-radius: 8px;
        background-color: var(--bg-secondary);
        border: 2px solid var(--border-color);
    }

    .step-active {
        border-color: var(--primary-color);
        background-color: rgba(var(--primary-color-rgb), 0.1);
    }

    .step-number {
        width: 40px;
        height: 40px;
        background-color: var(--primary-color);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px;
        font-weight: bold;
        font-size: 1.2rem;
    }

    .step-title {
        font-weight: 500;
        color: var(--text-color);
    }

    .qr-code-container {
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }
</style>

@section Scripts {
    <script>
        // Auto-focus verification code input
        document.getElementById('verificationCode').focus();

        // Auto-advance input
        document.getElementById('verificationCode').addEventListener('input', function() {
            this.value = this.value.replace(/[^0-9]/g, '');
            if (this.value.length === 6) {
                document.getElementById('setup2faForm').submit();
            }
        });

        // Copy secret key
        function copySecretKey() {
            const secretKey = document.getElementById('secretKey');
            secretKey.select();
            secretKey.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(secretKey.value).then(() => {
                // Show copied notification
                const button = event.target.closest('button');
                const originalHtml = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i>';
                button.classList.add('btn-success');
                button.classList.remove('btn-outline-secondary');

                setTimeout(() => {
                    button.innerHTML = originalHtml;
                    button.classList.remove('btn-success');
                    button.classList.add('btn-outline-secondary');
                }, 2000);
            });
        }

        // Refresh QR Code (simulate)
        function refreshQrCode() {
            const qrImage = document.getElementById('qrCodeImage');
            const currentSrc = qrImage.src;
            qrImage.src = currentSrc.split('?')[0] + '?refresh=' + new Date().getTime();

            // Show notification
            showNotification('QR Code refreshed successfully', 'info');
        }

        // Download QR Code
        function downloadQrCode() {
            const qrImage = document.getElementById('qrCodeImage');
            const link = document.createElement('a');
            link.href = qrImage.src;
            link.download = '2fa-qr-code.png';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);

            showNotification('QR Code downloaded', 'success');
        }

        // Generate test code (for development)
        function generateTestCode() {
            const code = Math.floor(100000 + Math.random() * 900000).toString();
            document.getElementById('verificationCode').value = code;

            // Auto-submit after 1 second
            setTimeout(() => {
                document.getElementById('setup2faForm').submit();
            }, 1000);

            showNotification('Test code generated. Auto-submitting...', 'info');
        }

        // Helper function to show notifications
        function showNotification(message, type) {
            const alertClass = type === 'success' ? 'alert-success' :
                              type === 'info' ? 'alert-info' : 'alert-warning';

            const notification = document.createElement('div');
            notification.className = `alert ${alertClass} alert-dismissible fade show position-fixed`;
            notification.style.bottom = '20px';
            notification.style.right = '20px';
            notification.style.zIndex = '9999';
            notification.style.minWidth = '300px';

            notification.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'info-circle'} me-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            document.body.appendChild(notification);

            // Auto-remove after 3 seconds
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 3000);
        }
    </script>
}