@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white py-4">
                    <h1 class="display-4 mb-0">
                        <i class="fas fa-ban fa-2x me-3"></i>Access Denied
                    </h1>
                </div>
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-5x text-danger mb-4"></i>
                        <h2 class="text-danger">Unauthorized Access</h2>
                        <p class="lead mt-3">
                            You don't have permission to access this page or resource.
                        </p>
                    </div>

                    <div class="alert alert-warning mb-4">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>Why am I seeing this?
                        </h5>
                        <ul class="mb-0">
                            <li>Your account may not have the required role or permissions</li>
                            <li>You might be trying to access a restricted area</li>
                            <li>The resource may require higher privileges</li>
                            <li>Your session may have expired</li>
                        </ul>
                    </div>

                    <div class="row g-3 justify-content-center">
                        <div class="col-md-4">
                            <a asp-action="ViewProfile" class="btn btn-outline-primary w-100">
                                <i class="fas fa-user me-2"></i>My Profile
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="Dashboard" class="btn btn-primary w-100">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="Logout" class="btn btn-outline-danger w-100">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a>
                        </div>
                    </div>

                    <div class="mt-5">
                        <h5>Need Help?</h5>
                        <p class="text-muted">
                            Contact your system administrator or IT support if you believe this is an error.
                        </p>
                        <a href="mailto:support@futuremed.com" class="btn btn-outline-info">
                            <i class="fas fa-envelope me-2"></i>Contact Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>