@model List<BedAssignment>

@{
    ViewData["Title"] = "Bed Assignments";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-bed me-2"></i>Bed Assignments Management
                    </h4>
                    <div>
                        <a asp-action="AdmittedPatients" class="btn btn-light btn-sm me-2">
                            <i class="fas fa-procedures me-1"></i>View Admitted
                        </a>
                        <a asp-action="DeletedBedAssignments" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-history me-1"></i>Deleted Assignments
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" class="form-control" id="searchInput" placeholder="Search patients or beds...">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select" id="wardFilter">
                                <option value="">All Wards</option>
                                @foreach (var ward in Model.Select(m => m.Bed?.Ward?.WardName).Distinct().Where(w => !string.IsNullOrEmpty(w)).OrderBy(w => w))
                                {
                                    <option value="@ward">@ward</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <div class="btn-group w-100">
                                <button class="btn btn-outline-primary" onclick="exportBedAssignments()">
                                    <i class="fas fa-file-excel me-2"></i>Export
                                </button>
                                <button class="btn btn-outline-secondary" onclick="printAssignments()">
                                    <i class="fas fa-print me-2"></i>Print
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Bed Assignments Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Active Bed Assignments (@Model.Count)
                    </h5>
                    <div class="d-flex align-items-center">
                        <span class="badge bg-success me-3">
                            <i class="fas fa-bed me-1"></i>@Model.Count Occupied
                        </span>
                        <button class="btn btn-sm btn-outline-info" onclick="refreshAssignments()">
                            <i class="fas fa-redo"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-bed fa-4x text-muted mb-3"></i>
                            <h5>No Active Bed Assignments</h5>
                            <p class="text-muted">All beds are currently available or no patients have been assigned beds.</p>
                            <a asp-action="AdmittedPatients" class="btn btn-primary">
                                <i class="fas fa-procedures me-2"></i>View Admitted Patients
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="assignmentsTable">
                                <thead>
                                    <tr>
                                        <th>Bed Details</th>
                                        <th>Patient Information</th>
                                        <th>Assignment Date</th>
                                        <th>Duration</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var assignment in Model)
                                    {
                                        var duration = DateTime.Now - assignment.AssignedDate;
                                        <tr data-ward="@assignment.Bed?.Ward?.WardName">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bed-icon me-3">
                                                        <i class="fas fa-bed fa-2x @(assignment.Bed?.Status == BedStatus.Occupied ? "text-danger" : "text-success")"></i>
                                                    </div>
                                                    <div>
                                                        <strong>Bed @assignment.Bed?.BedNumber</strong><br>
                                                        <small class="text-muted">
                                                            @assignment.Bed?.Ward?.WardName
                                                            @if (assignment.Bed != null)
                                                            {
                                                                <span class="badge bg-@(assignment.Bed.Status == BedStatus.Occupied ? "danger" : "success") ms-2">
                                                                    @assignment.Bed.Status
                                                                </span>
                                                            }
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <strong>@assignment.Patient?.FirstName @assignment.Patient?.LastName</strong><br>
                                                <small class="text-muted">
                                                    ID: @assignment.Patient?.PatientId |
                                                    @assignment.Patient?.Gender |
                                                    @assignment.Patient?.DOB.ToString("yyyy-MM-dd")
                                                </small>
                                            </td>
                                            <td>
                                                @assignment.AssignedDate.ToString("dd MMM yyyy HH:mm")<br>
                                                <small class="text-muted">@assignment.AssignedDate.ToString("dddd")</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    @duration.Days day@(duration.Days != 1 ? "s" : "")
                                                </span><br>
                                                <small class="text-muted">
                                                    @duration.Hours hours @duration.Minutes minutes
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="EditBedAssignment" asp-route-id="@assignment.AssignmentId"
                                                       class="btn btn-outline-primary" title="Edit Assignment">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="DischargePatient" asp-route-id="@assignment.AssignmentId"
                                                       class="btn btn-outline-warning" title="Discharge">
                                                        <i class="fas fa-sign-out-alt"></i>
                                                    </a>
                                                    <a asp-action="DeleteBedAssignment" asp-route-id="@assignment.AssignmentId"
                                                       class="btn btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Showing @Model.Count active bed assignments
                        </small>
                        <div>
                            <a href="#" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#statsModal">
                                <i class="fas fa-chart-pie me-1"></i>View Statistics
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Modal -->
<div class="modal fade" id="statsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-chart-pie me-2"></i>Bed Assignment Statistics
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6>Occupancy Rate</h6>
                                <div class="progress" style="height: 30px;">
                                    <div class="progress-bar bg-success" style="width: 75%">
                                        75% Occupied
                                    </div>
                                </div>
                                <small class="text-muted">Based on total available beds</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6>Average Stay Duration</h6>
                                <h2>3.2 days</h2>
                                <small class="text-muted">Across all current assignments</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <h6>Ward Distribution</h6>
                                <canvas id="wardChart" height="100"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Generate Report</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Search and filter functionality
            const searchInput = document.getElementById('searchInput');
            const wardFilter = document.getElementById('wardFilter');
            const table = document.getElementById('assignmentsTable');

            if (searchInput && table) {
                searchInput.addEventListener('input', filterTable);
            }

            if (wardFilter && table) {
                wardFilter.addEventListener('change', filterTable);
            }

            // Initialize chart if modal is opened
            const statsModal = document.getElementById('statsModal');
            if (statsModal) {
                statsModal.addEventListener('shown.bs.modal', function() {
                    initializeWardChart();
                });
            }
        });

        function filterTable() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const selectedWard = document.getElementById('wardFilter').value;
            const rows = document.querySelectorAll('#assignmentsTable tbody tr');

            rows.forEach(row => {
                const rowText = row.textContent.toLowerCase();
                const rowWard = row.getAttribute('data-ward');

                const matchesSearch = rowText.includes(searchTerm);
                const matchesWard = !selectedWard || rowWard === selectedWard;

                row.style.display = matchesSearch && matchesWard ? '' : 'none';
            });
        }

        function exportBedAssignments() {
            alert('Export functionality would generate an Excel report of bed assignments.');
            // In production, this would trigger a file download
        }

        function printAssignments() {
            const printContent = document.getElementById('assignmentsTable').outerHTML;
            const originalContent = document.body.innerHTML;

            document.body.innerHTML = `
                <div class="container mt-5">
                    <h1 class="text-center mb-4">Bed Assignments Report</h1>
                    <p class="text-center mb-4">Generated on: ${new Date().toLocaleDateString()}</p>
                    ${printContent}
                    <hr class="my-4">
                    <small class="text-muted">
                        Generated by Ward Admin: @User.Identity.Name
                    </small>
                </div>
            `;

            window.print();
            document.body.innerHTML = originalContent;
            location.reload();
        }

        function refreshAssignments() {
            location.reload();
        }

        function initializeWardChart() {
            const ctx = document.getElementById('wardChart').getContext('2d');

            // Sample data - in production, this would come from an API
            const wardData = {
                'Ward A': 8,
                'Ward B': 12,
                'Ward C': 6,
                'Ward D': 4
            };

            const chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: Object.keys(wardData),
                    datasets: [{
                        label: 'Bed Assignments',
                        data: Object.values(wardData),
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.6)',
                            'rgba(255, 99, 132, 0.6)',
                            'rgba(75, 192, 192, 0.6)',
                            'rgba(255, 206, 86, 0.6)'
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 99, 132, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(255, 206, 86, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Number of Beds'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Wards'
                            }
                        }
                    }
                }
            });
        }

        // Auto-refresh every 2 minutes
        setInterval(() => {
            if (!document.hidden) {
                refreshAssignments();
            }
        }, 120000);
    </script>
}