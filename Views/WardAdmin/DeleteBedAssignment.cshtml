@model BedAssignment
@{
    ViewData["Title"] = "Delete Bed Assignment";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Delete Bed Assignment</h1>
        <a asp-action="BedAssignmentsList" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Assignments
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Confirm Deletion</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5 class="alert-heading">
                    <i class="fas fa-exclamation-triangle"></i> Warning!
                </h5>
                <p>Are you sure you want to delete this bed assignment? This will mark the assignment as deleted (soft delete).</p>
            </div>

            <h5>Assignment Details</h5>
            <dl class="row">
                <dt class="col-sm-3">Patient:</dt>
                <dd class="col-sm-9">@Model.Patient?.FullName</dd>

                <dt class="col-sm-3">Assignment ID:</dt>
                <dd class="col-sm-9">@Model.AssignmentId</dd>

                <dt class="col-sm-3">Bed Number:</dt>
                <dd class="col-sm-9">@Model.Bed?.BedNumber</dd>

                <dt class="col-sm-3">Ward:</dt>
                <dd class="col-sm-9">@Model.Bed?.Ward?.WardName</dd>

                <dt class="col-sm-3">Assigned Date:</dt>
                <dd class="col-sm-9">@Model.AssignedDate.ToShortDateString()</dd>
            </dl>

            <form asp-action="DeleteBedAssignmentConfirmed" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="AssignmentId" />

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-danger me-md-2"
                            onclick="return confirm('Are you absolutely sure? This will mark the assignment as deleted.')">
                        <i class="fas fa-trash"></i> Confirm Delete
                    </button>
                    <a asp-action="BedAssignmentsList" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>