@model EditBedAssignmentViewModel
@{
    ViewData["Title"] = "Edit Bed Assignment";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Edit Bed Assignment</h1>
        <a asp-action="BedAssignmentsList" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Assignments
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Edit Bed Assignment</h5>
        </div>
        <div class="card-body">
            <form asp-action="EditBedAssignment" method="post">
                @Html.AntiForgeryToken()

                <div class="row mb-3">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Patient:</dt>
                            <dd class="col-sm-8">@Model.PatientName</dd>

                            <dt class="col-sm-4">Current Bed:</dt>
                            <dd class="col-sm-8">@Model.CurrentBedInfo</dd>

                            <dt class="col-sm-4">Assigned Date:</dt>
                            <dd class="col-sm-8">@Model.AssignedDate.ToShortDateString()</dd>
                        </dl>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="NewBedId" class="form-label">Select New Bed *</label>
                    <select asp-for="NewBedId" asp-items="Model.AvailableBeds"
                            class="form-select" required>
                        <option value="">-- Select a Bed --</option>
                    </select>
                    <span asp-validation-for="NewBedId" class="text-danger"></span>
                    <small class="form-text text-muted">
                        Select a different bed to move the patient, or keep the current bed.
                    </small>
                </div>

                <div class="mb-3">
                    <label asp-for="AssignedDate" class="form-label">Assignment Date *</label>
                    <input asp-for="AssignedDate" class="form-control" type="date" required />
                    <span asp-validation-for="AssignedDate" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="AssignmentId" />
                <input type="hidden" asp-for="PatientId" />
                <input type="hidden" asp-for="CurrentBedId" />

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary me-md-2">
                        <i class="fas fa-save"></i> Update Assignment
                    </button>
                    <a asp-action="BedAssignmentsList" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}