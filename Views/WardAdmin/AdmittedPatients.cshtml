@model IEnumerable<HospitalManagement.ViewModel.AdmittedPatientListViewModel>

@{
    ViewData["Title"] = "Admitted Patients";
}

<div class="container-fluid">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-procedures me-2"></i>Admitted Patients
                    </h4>
                    <div>
                        <a asp-action="Admit" class="btn btn-light btn-sm me-2">
                            <i class="fas fa-user-plus me-1"></i>Admit New Patient
                        </a>
                        <a asp-action="DeletedAdmissionsList" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-history me-1"></i>Admission History
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" class="form-control" id="searchInput" placeholder="Search patients...">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <select class="form-select" id="doctorFilter">
                                <option value="">All Doctors</option>
                                @foreach (var doctor in Model.Select(m => m.DoctorName).Distinct().OrderBy(d => d))
                                {
                                    <option value="@doctor">@doctor</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-4">
                            <div class="btn-group w-100">
                                <button class="btn btn-outline-primary" onclick="exportAdmissions()">
                                    <i class="fas fa-file-excel me-2"></i>Export
                                </button>
                                <button class="btn btn-outline-secondary" onclick="printAdmissions()">
                                    <i class="fas fa-print me-2"></i>Print
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Patient Cards -->
    @if (!Model.Any())
    {
        <div class="card shadow-sm text-center py-5">
            <i class="fas fa-procedures fa-4x text-muted mb-3"></i>
            <h5>No Admitted Patients</h5>
            <p class="text-muted">There are currently no admitted patients.</p>
            <a asp-action="Admit" class="btn btn-primary">
                <i class="fas fa-user-plus me-2"></i>Admit First Patient
            </a>
        </div>
    }
    else
    {
        <div class="row" id="patientsContainer">
            @foreach (var patient in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4"
                     data-doctor="@patient.DoctorName">

                    @{
                        var statusColor = patient.AdmissionStatus == AdmissionStatus.Admitted
                            ? "primary"
                            : "warning";
                    }

                    <div class="card shadow-sm h-100 border-@statusColor">
                        <div class="card-header bg-@statusColor text-white d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">
                                <i class="fas fa-user-injured me-2"></i>@patient.FullName
                            </h6>
                            <span class="badge bg-light text-dark">
                                ID: @patient.PatientId
                            </span>
                        </div>

                        <div class="card-body">

                            <div class="mb-3">
                                <small class="text-muted">Admitted</small>
                                <h6>@patient.AdmissionDate.ToString("dd MMM yyyy HH:mm")</h6>
                            </div>

                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted">Doctor</small>
                                    <p class="mb-0">
                                        <i class="fas fa-user-md me-1 text-info"></i>
                                        @patient.DoctorName
                                    </p>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Nurse</small>
                                    <p class="mb-0">
                                        <i class="fas fa-user-nurse me-1 text-success"></i>
                                        @patient.NurseName
                                    </p>
                                </div>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted d-block">Medical Information</small>

                                @if (patient.Allergies.Any())
                                {
                                    <span class="badge bg-warning me-1 mb-1">
                                        Allergies: @patient.Allergies.Count
                                    </span>
                                }

                                @if (patient.Medications.Any())
                                {
                                    <span class="badge bg-info me-1 mb-1">
                                        Meds: @patient.Medications.Count
                                    </span>
                                }

                                @if (patient.Conditions.Any())
                                {
                                    <span class="badge bg-danger me-1 mb-1">
                                        Conditions: @patient.Conditions.Count
                                    </span>
                                }
                            </div>

                            <div class="mb-3">
                                <small class="text-muted">Patient Details</small>
                                <div class="d-flex justify-content-between">
                                    <span>
                                        <i class="fas fa-birthday-cake me-1"></i>
                                        @patient.DOB.ToString("yyyy-MM-dd")
                                    </span>
                                    <span>
                                        <i class="fas fa-venus-mars me-1"></i>
                                        @patient.Gender
                                    </span>
                                </div>
                                <div class="mt-1">
                                    <i class="fas fa-phone me-1"></i>
                                    @patient.Cellphone
                                </div>
                            </div>

                        </div>

                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between">
                                <div class="btn-group">
                                    <a asp-action="EditAdmission" asp-route-id="@patient.AdmissionId"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="AssignBed" asp-route-id="@patient.PatientId"
                                       class="btn btn-sm btn-outline-success">
                                        <i class="fas fa-bed"></i>
                                    </a>
                                </div>

                                <div class="btn-group">
                                    <a asp-action="DischargePatient" asp-route-id="@patient.AdmissionId"
                                       class="btn btn-sm btn-outline-warning">
                                        <i class="fas fa-sign-out-alt"></i>
                                    </a>
                                    <a asp-action="DeleteAdmission" asp-route-id="@patient.AdmissionId"
                                       class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>

        <!-- Summary -->
        <div class="card mt-4 shadow-sm">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <h4>@Model.Count()</h4>
                        <small>Total Admitted</small>
                    </div>
                    <div class="col-md-3">
                        <h4>@Model.Count(p => p.AdmissionStatus == AdmissionStatus.Admitted)</h4>
                        <small>Currently Admitted</small>
                    </div>
                    <div class="col-md-3">
                        <h4>@Model.Select(p => p.DoctorName).Distinct().Count()</h4>
                        <small>Doctors</small>
                    </div>
                    <div class="col-md-3">
                        <h4>@Model.Select(p => p.NurseName).Distinct().Count()</h4>
                        <small>Nurses</small>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

@section Scripts {
    <script>
        function filterPatients() {
            const term = document.getElementById('searchInput').value.toLowerCase();
            const doctor = document.getElementById('doctorFilter').value;
            document.querySelectorAll('#patientsContainer > div').forEach(card => {
                const text = card.innerText.toLowerCase();
                const cardDoctor = card.dataset.doctor;
                card.style.display =
                    text.includes(term) && (!doctor || cardDoctor === doctor)
                        ? '' : 'none';
            });
        }

        document.getElementById('searchInput')?.addEventListener('input', filterPatients);
        document.getElementById('doctorFilter')?.addEventListener('change', filterPatients);
    </script>
}
