@model List<Patient>

@{
    ViewData["Title"] = "Discharged Patients";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-secondary">
                <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-sign-out-alt me-2"></i>Discharged Patients
                    </h4>
                    <div>
                        <a asp-action="AdmittedPatients" class="btn btn-light btn-sm me-2">
                            <i class="fas fa-procedures me-1"></i>View Admitted
                        </a>
                        <a asp-action="Patients" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-users me-1"></i>All Patients
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" class="form-control" id="searchInput" placeholder="Search discharged patients...">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group w-100">
                                <button class="btn btn-outline-primary" onclick="exportDischarges()">
                                    <i class="fas fa-file-excel me-2"></i>Export
                                </button>
                                <button class="btn btn-outline-secondary" onclick="printDischarges()">
                                    <i class="fas fa-print me-2"></i>Print
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Discharged Patients Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Recently Discharged Patients (@Model.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-sign-out-alt fa-4x text-muted mb-3"></i>
                            <h5>No Discharged Patients</h5>
                            <p class="text-muted">There are no discharged patients in the system.</p>
                            <a asp-action="AdmittedPatients" class="btn btn-primary">
                                <i class="fas fa-procedures me-2"></i>View Admitted Patients
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="dischargedTable">
                                <thead>
                                    <tr>
                                        <th>Patient</th>
                                        <th>Discharge Details</th>
                                        <th>Contact Information</th>
                                        <th>Medical Summary</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var patient in Model)
                                    {
                                        var lastAdmission = patient.Admissions?.OrderByDescending(a => a.AdmissionDate).FirstOrDefault();
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar me-3">
                                                        <div class="avatar-placeholder bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center"
                                                             style="width: 40px; height: 40px;">
                                                            @patient.FirstName[0]@patient.LastName[0]
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <strong>@patient.FirstName @patient.LastName</strong><br>
                                                        <small class="text-muted">
                                                            ID: @patient.PatientId |
                                                            @patient.Gender |
                                                            @patient.DOB.ToString("yyyy-MM-dd")
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (lastAdmission != null)
                                                {
                                                    <div>
                                                        <small class="text-muted">Admitted:</small>
                                                        <div>@lastAdmission.AdmissionDate.ToString("dd MMM yyyy")</div>
                                                    </div>
                                                    <div>
                                                        <small class="text-muted">Discharged:</small>
                                                        <div>
                                                            <span class="badge bg-secondary">
                                                                @(lastAdmission.DischargeDate != null
                                                                    ? lastAdmission.DischargeDate.Value.ToString("dd MMM yyyy")
                                                                    : "Recently")
                                                            </span>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No admission record</span>
                                                }
                                            </td>
                                            <td>
                                                <div>
                                                    <i class="fas fa-phone me-1"></i> @patient.Cellphone
                                                </div>
                                                <div>
                                                    <i class="fas fa-id-card me-1"></i> @patient.IdNumber
                                                </div>
                                                @if (!string.IsNullOrEmpty(patient.Cellphone))
                                                {
                                                    <div>
                                                        <i class="fas fa-exclamation-circle me-1"></i> @patient.Cellphone
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    var conditions = patient.PatientConditions?.Count ?? 0;
                                                    var allergies = patient.PatientAllergies?.Count ?? 0;
                                                    var medications = patient.PatientMedications?.Count ?? 0;
                                                }
                                                <div class="d-flex flex-wrap gap-1">
                                                    @if (conditions > 0)
                                                    {
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-heartbeat me-1"></i>@conditions Conditions
                                                        </span>
                                                    }
                                                    @if (allergies > 0)
                                                    {
                                                        <span class="badge bg-warning">
                                                            <i class="fas fa-allergies me-1"></i>@allergies Allergies
                                                        </span>
                                                    }
                                                    @if (medications > 0)
                                                    {
                                                        <span class="badge bg-info">
                                                            <i class="fas fa-pills me-1"></i>@medications Meds
                                                        </span>
                                                    }
                                                </div>
                                                <small class="text-muted d-block mt-1">
                                                    @(patient.PatientFolders?.Any(f => f.Status == Status.Active) == true ? "Folder available" : "No folder")

                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="PatientDetails" asp-route-id="@patient.PatientId"
                                                       class="btn btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <form asp-action="RestoreDischargedPatient" method="post"
                                                          onsubmit="return confirmRestore('@patient.FirstName @patient.LastName')"
                                                          class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@patient.PatientId" />
                                                        <button type="submit" class="btn btn-outline-success" title="Restore to Admitted">
                                                            <i class="fas fa-undo"></i>
                                                        </button>
                                                    </form>
                                                    <a asp-action="CreatePatientFolder" asp-route-id="@patient.PatientId"
                                                       class="btn btn-outline-primary" title="Create/View Folder">
                                                        <i class="fas fa-folder"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Showing @Model.Count discharged patients
                        </small>
                        <div>
                            <button class="btn btn-sm btn-outline-secondary" onclick="refreshDischarges()">
                                <i class="fas fa-redo me-1"></i>Refresh
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Search functionality
            const searchInput = document.getElementById('searchInput');
            const table = document.getElementById('dischargedTable');

            if (searchInput && table) {
                searchInput.addEventListener('input', filterTable);
            }
        });

        function filterTable() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const rows = document.querySelectorAll('#dischargedTable tbody tr');

            rows.forEach(row => {
                const rowText = row.textContent.toLowerCase();
                row.style.display = rowText.includes(searchTerm) ? '' : 'none';
            });
        }

        function confirmRestore(patientName) {
            return confirm(`Are you sure you want to restore ${patientName} to admitted status?\n\nThis will allow the patient to be readmitted.`);
        }

        function exportDischarges() {
            alert('Export functionality would generate an Excel report of discharged patients.');
            // In production, this would trigger a file download
        }

        function printDischarges() {
            const printContent = document.getElementById('dischargedTable').outerHTML;
            const originalContent = document.body.innerHTML;

            document.body.innerHTML = `
                <div class="container mt-5">
                    <h1 class="text-center mb-4">Discharged Patients Report</h1>
                    <p class="text-center mb-4">Generated on: ${new Date().toLocaleDateString()}</p>
                    ${printContent}
                    <hr class="my-4">
                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted">
                                Generated by: @User.Identity.Name
                            </small>
                        </div>
                        <div class="col-md-6 text-end">
                            <small class="text-muted">
                                Total Discharged: @Model.Count
                            </small>
                        </div>
                    </div>
                </div>
            `;

            window.print();
            document.body.innerHTML = originalContent;
            location.reload();
        }

        function refreshDischarges() {
            location.reload();
        }

        // Auto-refresh every 5 minutes
        setInterval(() => {
            if (!document.hidden) {
                refreshDischarges();
            }
        }, 300000);
    </script>

    <style>
        .avatar-placeholder {
            font-weight: bold;
            font-size: 14px;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.03);
        }

        .badge {
            font-size: 0.75em;
        }
    </style>
}