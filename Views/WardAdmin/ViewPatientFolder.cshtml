@model PatientFolder
@{
    ViewData["Title"] = "Patient Folder";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Patient Folder</h1>
        <div>
            <a asp-action="Patients" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Patients
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Patient Information Card -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Patient Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Patient ID:</dt>
                        <dd class="col-sm-8">@Model.Patient?.PatientId</dd>

                        <dt class="col-sm-4">Full Name:</dt>
                        <dd class="col-sm-8">@Model.Patient?.FirstName @Model.Patient?.LastName</dd>

                        <dt class="col-sm-4">ID Number:</dt>
                        <dd class="col-sm-8">@Model.Patient?.IdNumber</dd>

                        <dt class="col-sm-4">Date of Birth:</dt>
                        <dd class="col-sm-8">@Model.Patient?.DOB.ToLongDateString()</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Gender:</dt>
                        <dd class="col-sm-8">@Model.Patient?.Gender</dd>

                        <dt class="col-sm-4">Cellphone:</dt>
                        <dd class="col-sm-8">@Model.Patient?.Cellphone</dd>

                        <dt class="col-sm-4">Folder Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Status == Status.Active ? "success" : "danger")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-4">Opened By:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.OpenedBy) ? "N/A" : Model.OpenedBy)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Current Admission Card -->
    @if (Model.Patient?.Admissions != null && Model.Patient.Admissions.Any(a => a.AdmissionStatus == Status.Active))
    {
        var admission = Model.Patient.Admissions.FirstOrDefault(a => a.AdmissionStatus == Status.Active);
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Current Admission</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Admission Date:</dt>
                            <dd class="col-sm-8">@admission?.AdmissionDate.ToLongDateString()</dd>

                            <dt class="col-sm-4">Doctor:</dt>
                            <dd class="col-sm-8">@admission?.Doctor?.FullName</dd>

                            <dt class="col-sm-4">Nurse:</dt>
                            <dd class="col-sm-8">@admission?.Nurse?.FullName</dd>
                        </dl>
                    </div>
                    @if (!string.IsNullOrEmpty(admission?.Notes))
                    {
                        <div class="col-md-6">
                            <dt>Admission Notes:</dt>
                            <dd>@admission.Notes</dd>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Medical Information Cards -->
    <div class="row mb-4">
        <!-- Allergies -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-danger text-white">
                    <h6 class="mb-0">Allergies</h6>
                </div>
                <div class="card-body">
                    @if (Model.Patient?.PatientAllergies != null && Model.Patient.PatientAllergies.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var allergy in Model.Patient.PatientAllergies)
                            {
                                <li>
                                    <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                                    @allergy.Allergy?.Name
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No allergies recorded</p>
                    }
                </div>
            </div>
        </div>

        <!-- Medications -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">Medications</h6>
                </div>
                <div class="card-body">
                    @if (Model.Patient?.PatientMedications != null && Model.Patient.PatientMedications.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var med in Model.Patient.PatientMedications)
                            {
                                <li>
                                    <i class="fas fa-pills text-info me-2"></i>
                                    @med.Medication?.Name
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No medications recorded</p>
                    }
                </div>
            </div>
        </div>

        <!-- Conditions -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">Medical Conditions</h6>
                </div>
                <div class="card-body">
                    @if (Model.Patient?.PatientConditions != null && Model.Patient.PatientConditions.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var condition in Model.Patient.PatientConditions)
                            {
                                <li>
                                    <i class="fas fa-stethoscope text-warning me-2"></i>
                                    @condition.Condition?.Name
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No conditions recorded</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Folder Notes -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Folder Notes</h5>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="mb-3">
                    <p class="card-text">@Model.Notes</p>
                </div>
            }
            else
            {
                <p class="text-muted">No notes added yet.</p>
            }

            <!-- Edit Notes Form -->
            <form asp-action="EditPatientFolder" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="FolderId" value="@Model.FolderId" />

                <div class="mb-3">
                    <label for="Notes" class="form-label">Edit Notes:</label>
                    <textarea class="form-control" id="Notes" name="Notes" rows="3">@Model.Notes</textarea>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Update Notes
                    </button>
                    <form asp-action="DeletePatientFolder" method="post" class="ms-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.FolderId" />
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete this folder?')">
                            <i class="fas fa-trash"></i> Delete Folder
                        </button>
                    </form>
                </div>
            </form>
        </div>
    </div>
</div>