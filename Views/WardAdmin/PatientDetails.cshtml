@model Patient
@{
    ViewData["Title"] = "Patient Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Patient Details</h1>
        <div>
            <a asp-action="EditPatient" asp-route-id="@Model.PatientId" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Patients" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Personal Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Patient ID:</dt>
                <dd class="col-sm-9">@Model.PatientId</dd>

                <dt class="col-sm-3">Full Name:</dt>
                <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

                <dt class="col-sm-3">ID Number:</dt>
                <dd class="col-sm-9">@Model.IdNumber</dd>

                <dt class="col-sm-3">Date of Birth:</dt>
                <dd class="col-sm-9">@Model.DOB.ToLongDateString()</dd>

                <dt class="col-sm-3">Age:</dt>
                <dd class="col-sm-9">@(DateTime.Now.Year - Model.DOB.Year)</dd>

                <dt class="col-sm-3">Gender:</dt>
                <dd class="col-sm-9">@Model.Gender</dd>

                <dt class="col-sm-3">Cellphone:</dt>
                <dd class="col-sm-9">@Model.Cellphone</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.GetStatus == Status.Active ? "success" : "danger")">
                        @Model.GetStatus
                    </span>
                </dd>
            </dl>
        </div>
    </div>

    <!-- Additional patient information sections can be added here -->
    <!-- For example: Medical History, Admissions, etc. -->

    <div class="mt-3">
        <a asp-action="Patients" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Patients List
        </a>
    </div>
</div>