@model IEnumerable<AdmissionWithPatientViewModel>
@{
    ViewData["Title"] = "Deleted Admissions";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Deleted Admissions</h1>
        <div>
            <a asp-action="AdmittedPatients" class="btn btn-primary">
                <i class="fas fa-users"></i> Active Admissions
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Deleted Admission Records</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Admission ID</th>
                                <th>Patient Name</th>
                                <th>Patient ID</th>
                                <th>Admission Date</th>
                                <th>Notes</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var admission in Model)
                            {
                                <tr>
                                    <td>@admission.AdmissionId</td>
                                    <td>@admission.FirstName @admission.LastName</td>
                                    <td>@admission.PatientId</td>
                                    <td>@admission.AdmissionDate.ToShortDateString()</td>
                                    <td>@(string.IsNullOrEmpty(admission.Notes) ? "None" : admission.Notes)</td>
                                    <td>
                                        <form asp-action="DeletedAdmission" asp-route-id="@admission.AdmissionId" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-success"
                                                    onclick="return confirm('Restore this admission?')">
                                                <i class="fas fa-trash-restore"></i> Restore
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No deleted admission records found.
                </div>
            }
        </div>
    </div>
</div>