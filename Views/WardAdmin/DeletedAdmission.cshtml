@model Admission
@{
    ViewData["Title"] = "Restore Admission";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Restore Admission</h1>
        <a asp-action="DeletedAdmissionsList" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Deleted List
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Confirm Restoration</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <h5 class="alert-heading">
                    <i class="fas fa-info-circle"></i> Information
                </h5>
                <p>Are you sure you want to restore this admission record? This will make the admission active again.</p>
            </div>

            <h5>Admission Details</h5>
            <dl class="row">
                <dt class="col-sm-3">Admission ID:</dt>
                <dd class="col-sm-9">@Model.AdmissionId</dd>

                <dt class="col-sm-3">Admission Date:</dt>
                <dd class="col-sm-9">@Model.AdmissionDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-danger">Deleted</span>
                </dd>

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <dt class="col-sm-3">Notes:</dt>
                    <dd class="col-sm-9">@Model.Notes</dd>
                }
            </dl>

            <form asp-action="DeletedAdmission" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="AdmissionId" />

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-success me-md-2"
                            onclick="return confirm('Restore this admission?')">
                        <i class="fas fa-trash-restore"></i> Confirm Restore
                    </button>
                    <a asp-action="DeletedAdmissionsList" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>