@model IEnumerable<PatientFolder>
@{
    ViewData["Title"] = "Deleted Patient Folders";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Deleted Patient Folders</h1>
        <a asp-action="Patients" class="btn btn-primary">
            <i class="fas fa-users"></i> Active Patients
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Deleted Folders</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Folder ID</th>
                                <th>Patient Name</th>
                                <th>Patient ID</th>
                                <th>Created Date</th>
                                <th>Notes</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var folder in Model)
                            {
                                <tr>
                                    <td>@folder.FolderId</td>
                                    <td>@folder.Patient?.FirstName @folder.Patient?.LastName</td>
                                    <td>@folder.Patient?.PatientId</td>
                                    <td>@folder.CreatedOn.ToShortDateString()</td>
                                    <td>@(string.IsNullOrEmpty(folder.Notes) ? "None" : folder.Notes.Substring(0, Math.Min(50, folder.Notes.Length)) + "...")</td>
                                    <td>
                                        <form asp-action="RestorePatientFolder" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@folder.FolderId" />
                                            <button type="submit" class="btn btn-sm btn-success"
                                                    onclick="return confirm('Restore this folder?')">
                                                <i class="fas fa-trash-restore"></i> Restore
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No deleted folders found.
                </div>
            }
        </div>
    </div>
</div>