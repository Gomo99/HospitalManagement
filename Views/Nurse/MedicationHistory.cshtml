@model List<HospitalManagement.Models.Treatment>

@{
    ViewData["Title"] = "Medication History";
    var patientName = ViewData["PatientName"] as string;
    var patientId = ViewData["PatientId"] as int?;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Medication History</h1>
            <p class="lead">Patient: <strong>@patientName</strong></p>
            <hr />
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a href="@Url.Action("AdministerMedication", new { patientId = patientId })" class="btn btn-success">
                    <i class="fas fa-plus"></i> Administer New Medication
                </a>
                <a href="@Url.Action("PatientTreatmentHistory", new { patientId = patientId })" class="btn btn-info">
                    <i class="fas fa-stethoscope"></i> All Treatments
                </a>
                <a href="@Url.Action("PatientOverview", new { patientId = patientId })" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Patient Overview
                </a>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Medication Administration Records (@Model.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date & Time</th>
                                        <th>Medication</th>
                                        <th>Dosage</th>
                                        <th>Reason</th>
                                        <th>Administered By</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var treatment in Model)
                                    {
                                        <tr>
                                            <td>@treatment.TreatmentDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>
                                                <strong>@treatment.Medication?.Name</strong>
                                            </td>
                                            <td>
                                                @if (treatment.Dosage.HasValue)
                                                {
                                                    <span class="badge badge-primary">
                                                        @treatment.Dosage @treatment.DosageUnit
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(treatment.Details))
                                                {
                                                    @if (treatment.Details.Contains("Reason:"))
                                                    {
                                                        var reason = treatment.Details.Split("Reason:")[1].Split('.')[0];
                                                        <span>@reason</span>
                                                    }
                                                    else
                                                    {
                                                        <span>@treatment.Description</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No reason specified</span>
                                                }
                                            </td>
                                            <td>@treatment.AdministeredBy?.FirstName</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(treatment.Details))
                                                {
                                                    <button type="button" class="btn btn-sm btn-info" data-toggle="modal" data-target="#notesModal@(treatment.TreatmentId)">
                                                        <i class="fas fa-eye"></i> View
                                                    </button>

                                                    <!-- Modal -->
                                                    <div class="modal fade" id="notesModal@(treatment.TreatmentId)" tabindex="-1" role="dialog">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Administration Notes</h5>
                                                                    <button type="button" class="close" data-dismiss="modal">
                                                                        <span>&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>@treatment.Details</p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No notes</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No medication administrations recorded for this patient yet.
                    <a href="@Url.Action("AdministerMedication", new { patientId = patientId })" class="alert-link">Administer first medication</a>
                </div>
            </div>
        </div>
    }
</div>