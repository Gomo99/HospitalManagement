@model List<HospitalManagement.Models.Treatment>

@{
    ViewData["Title"] = "Treatment History";
    var patientName = ViewData["PatientName"] as string;
    var patientId = ViewData["PatientId"] as int?;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Treatment History</h1>
            <p class="lead">Patient: <strong>@patientName</strong></p>
            <hr />
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a href="@Url.Action("RecordTreatment", new { patientId = patientId })" class="btn btn-success">
                    <i class="fas fa-plus"></i> Record New Treatment
                </a>
                <a href="@Url.Action("PatientOverview", new { patientId = patientId })" class="btn btn-info">
                    <i class="fas fa-user"></i> Patient Overview
                </a>
                <a href="@Url.Action("MyPatients")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Patients
                </a>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Treatment Records (@Model.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date & Time</th>
                                        <th>Treatment Type</th>
                                        <th>Description</th>
                                        <th>Medication</th>
                                        <th>Details</th>
                                        <th>Administered By</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var treatment in Model)
                                    {
                                        <tr>
                                            <td>@treatment.TreatmentDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>
                                                <span class="badge
                                                            @(treatment.TreatmentType.ToString() == "WoundDressing" ? "badge-danger" :
                                                                                                            treatment.TreatmentType.ToString() == "IVDripChange" ? "badge-primary" :
                                                                                                            treatment.TreatmentType.ToString() == "MedicationAdministration" ? "badge-success" :
                                                                                                            "badge-info")">
                                            @treatment.TreatmentType
                                        </span>
                                    </td>
                                    <td>@treatment.Description</td>
                                    <td>
                                        @if (treatment.Medication != null)
                                                {
                                                    <span class="badge badge-warning">
                                                        @treatment.Medication.Name
                                                        @if (treatment.Dosage.HasValue)
                                                        {
                                                            <text> - @treatment.Dosage @treatment.DosageUnit</text>
                                                        }
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(treatment.Details))
                                                {
                                                    <button type="button" class="btn btn-sm btn-info" data-toggle="modal" data-target="#detailsModal@(treatment.TreatmentId)">
                                                        <i class="fas fa-eye"></i> View
                                                    </button>

                                                    <!-- Modal -->
                                                    <div class="modal fade" id="detailsModal@(treatment.TreatmentId)" tabindex="-1" role="dialog">
                                                        <div class="modal-dialog modal-lg" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Treatment Details</h5>
                                                                    <button type="button" class="close" data-dismiss="modal">
                                                                        <span>&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p><strong>Date:</strong> @treatment.TreatmentDateTime.ToString("yyyy-MM-dd HH:mm")</p>
                                                                    <p><strong>Type:</strong> @treatment.TreatmentType</p>
                                                                    <p><strong>Description:</strong> @treatment.Description</p>
                                                                    <hr />
                                                                    <h6>Detailed Notes:</h6>
                                                                    <p>@treatment.Details</p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No details</span>
                                                }
                                            </td>
                                            <td>@treatment.AdministeredBy?.FirstName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No treatments recorded for this patient yet.
                    <a href="@Url.Action("RecordTreatment", new { patientId = patientId })" class="alert-link">Record the first treatment</a>
                </div>
            </div>
        </div>
    }
</div>