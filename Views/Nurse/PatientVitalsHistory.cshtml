@model List<HospitalManagement.Models.VitalSigns>

@{
    ViewData["Title"] = "Patient Vital Signs History";
    var patientName = ViewData["PatientName"] as string;
    var patientId = ViewData["PatientId"] as int?;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Vital Signs History</h1>
            <p class="lead">Patient: <strong>@patientName</strong></p>
            <hr />
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a href="@Url.Action("RecordVitals", new { patientId = patientId })" class="btn btn-success">
                    <i class="fas fa-plus"></i> Record New Vitals
                </a>
                <a href="@Url.Action("PatientOverview", new { patientId = patientId })" class="btn btn-info">
                    <i class="fas fa-user"></i> Patient Overview
                </a>
                <a href="@Url.Action("MyPatients")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Patients
                </a>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Vital Signs Records (@Model.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date & Time</th>
                                        <th>Blood Pressure</th>
                                        <th>Temperature</th>
                                        <th>Heart Rate</th>
                                        <th>Respiratory Rate</th>
                                        <th>O₂ Saturation</th>
                                        <th>Blood Glucose</th>
                                        <th>Pain Level</th>
                                        <th>Recorded By</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var vital in Model)
                                    {
                                        <tr>
                                            <td>@vital.RecordedDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(vital.BloodPressureSystolic) && !string.IsNullOrEmpty(vital.BloodPressureDiastolic))
                                                {
                                                    <span class="badge @(int.Parse(vital.BloodPressureSystolic) > 140 || int.Parse(vital.BloodPressureDiastolic) > 90 ? "badge-danger" : "badge-success")">
                                                        @vital.BloodPressure
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (vital.Temperature.HasValue)
                                                {
                                                    <span class="badge @(vital.Temperature > 38 ? "badge-danger" : "badge-success")">
                                                        @vital.TemperatureWithUnit
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (vital.HeartRate.HasValue)
                                                {
                                                    <span class="badge @(vital.HeartRate > 100 || vital.HeartRate < 60 ? "badge-warning" : "badge-success")">
                                                        @vital.HeartRate bpm
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (vital.RespiratoryRate.HasValue)
                                                {
                                                    <span class="badge @(vital.RespiratoryRate > 20 ? "badge-warning" : "badge-success")">
                                                        @vital.RespiratoryRate bpm
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (vital.OxygenSaturation.HasValue)
                                                {
                                                    <span class="badge @(vital.OxygenSaturation < 90 ? "badge-danger" : vital.OxygenSaturation < 95 ? "badge-warning" : "badge-success")">
                                                        @vital.OxygenSaturation%
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (vital.BloodSugar.HasValue)
                                                {
                                                    <span class="badge @(vital.BloodSugar > 11 ? "badge-danger" : vital.BloodSugar > 7 ? "badge-warning" : "badge-success")">
                                                        @vital.BloodSugarWithUnit
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (vital.PainLevel.HasValue)
                                                {
                                                    <span class="badge @(vital.PainLevel > 7 ? "badge-danger" : vital.PainLevel > 4 ? "badge-warning" : "badge-success")">
                                                        @vital.PainLevel/10
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">N/A</span>
                                                }
                                            </td>
                                            <td>@vital.TakenBy?.FirstName</td>
                                            <td>
                                                <a href="@Url.Action("ViewVitalSigns", new { id = vital.VitalSignsId })" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No vital signs recorded for this patient yet.
                    <a href="@Url.Action("RecordVitals", new { patientId = patientId })" class="alert-link">Record the first vital signs</a>
                </div>
            </div>
        </div>
    }
</div>