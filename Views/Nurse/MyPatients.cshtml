@model List<HospitalManagement.Models.Patient>

@{
    ViewData["Title"] = "My Patients";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">My Patients</h1>
            <p class="lead">Total Patients: <strong>@Model.Count</strong></p>
            <hr />
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a href="@Url.Action("NurseDashboard")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Patient ID</th>
                                        <th>Name</th>
                                        <th>Age</th>
                                        <th>Gender</th>
                                        <th>Contact</th>
                                        <th>Admission Date</th>
                                        <th>Last Vitals</th>
                                        <th>Pending Instructions</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var patient in Model)
                                    {
                                        <tr>
                                            <td>@patient.PatientId</td>
                                            <td>
                                                <strong>@patient.FullName</strong>
                                            </td>
                                            <td>@(DateTime.Now.Year - patient.DOB.Year)</td>
                                            <td>@patient.Gender</td>
                                            <td>@patient.Cellphone</td>
                                            <td>
                                                @if (patient.Admissions?.Any() == true)
                                                {
                                                    var admission = patient.Admissions.OrderByDescending(a => a.AdmissionDate).First();
                                                    <span class="badge badge-info">
                                                        @admission.AdmissionDate.ToString("yyyy-MM-dd")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    // You would need to fetch this from your database
                                                    // This is a placeholder
                                                    <span class="badge badge-success">Today 08:30</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    // You would need to fetch this from your database
                                                    // This is a placeholder
                                                    <span class="badge badge-warning">2 Pending</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("PatientOverview", new { patientId = patient.PatientId })" class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i> Overview
                                                    </a>
                                                    <div class="btn-group" role="group">
                                                        <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown">
                                                            <i class="fas fa-cogs"></i> Actions
                                                        </button>
                                                        <div class="dropdown-menu">
                                                            <a class="dropdown-item" href="@Url.Action("RecordVitals", new { patientId = patient.PatientId })">
                                                                <i class="fas fa-heartbeat"></i> Record Vitals
                                                            </a>
                                                            <a class="dropdown-item" href="@Url.Action("RecordTreatment", new { patientId = patient.PatientId })">
                                                                <i class="fas fa-stethoscope"></i> Record Treatment
                                                            </a>
                                                            <a class="dropdown-item" href="@Url.Action("AdministerMedication", new { patientId = patient.PatientId })">
                                                                <i class="fas fa-pills"></i> Administer Medication
                                                            </a>
                                                            <div class="dropdown-divider"></div>
                                                            <a class="dropdown-item" href="@Url.Action("ContactDoctor", new { patientId = patient.PatientId })">
                                                                <i class="fas fa-user-md"></i> Contact Doctor
                                                            </a>
                                                            <a class="dropdown-item" href="@Url.Action("ViewDoctorInstructions", new { patientId = patient.PatientId })">
                                                                <i class="fas fa-file-medical"></i> View Instructions
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No patients are currently assigned to you.
                    Patients will appear here once they are assigned to you by the ward administrator.
                </div>
            </div>
        </div>
    }
</div>