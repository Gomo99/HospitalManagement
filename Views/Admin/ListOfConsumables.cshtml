@model IEnumerable<Consumable>
@{
    ViewData["Title"] = "Consumable Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Consumable Management</h1>
        <div>
            <a asp-action="AddConsumables" class="btn btn-primary me-2">
                <i class="fas fa-plus"></i> Add New Consumable
            </a>
            <a asp-action="ConsumableReport" class="btn btn-secondary">
                <i class="fas fa-file-pdf"></i> Generate Report
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Active Consumables</h5>
            <div>
                <a asp-action="DeletedConsumables" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-trash"></i> View Deleted
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAllConsumables" />
                                </th>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Quantity</th>
                                <th>Expiry Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="select-consumable-item" value="@item.ConsumableId" />
                                    </td>
                                    <td>@item.ConsumableId</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <span class="badge bg-info">@item.Type</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(item.Quantity > 10 ? "success" : item.Quantity > 0 ? "warning" : "danger")">
                                            @item.Quantity
                                        </span>
                                    </td>
                                    <td>
                                        <span class="@(item.ExpiryDate < DateTime.Now.AddDays(30) ? "text-danger" : "")">
                                            @item.ExpiryDate.ToString("yyyy-MM-dd")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(item.ConsumableStatus == Status.Active ? "success" : "danger")">
                                            @item.ConsumableStatus
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="DetailsOfConsumables" asp-route-id="@item.ConsumableId"
                                               class="btn btn-sm btn-info me-1" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="EditConsumables" asp-route-id="@item.ConsumableId"
                                               class="btn btn-sm btn-warning me-1" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="DeleteConsumables" asp-route-id="@item.ConsumableId"
                                               class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <button id="bulkDeleteConsumablesBtn" class="btn btn-danger me-2" disabled>
                        <i class="fas fa-trash"></i> Delete Selected
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No consumables found. <a asp-action="AddConsumables">Add a new consumable</a>.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Select All functionality for consumables
        document.getElementById('selectAllConsumables').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.select-consumable-item');
            checkboxes.forEach(cb => cb.checked = this.checked);
            updateBulkConsumableButtons();
        });

        // Update bulk buttons
        function updateBulkConsumableButtons() {
            const selected = document.querySelectorAll('.select-consumable-item:checked');
            const deleteBtn = document.getElementById('bulkDeleteConsumablesBtn');

            deleteBtn.disabled = selected.length === 0;
        }

        // Attach event listeners
        document.querySelectorAll('.select-consumable-item').forEach(cb => {
            cb.addEventListener('change', updateBulkConsumableButtons);
        });

        // Bulk Delete functionality for consumables
        document.getElementById('bulkDeleteConsumablesBtn').addEventListener('click', function() {
            const selectedIds = Array.from(document.querySelectorAll('.select-consumable-item:checked'))
                .map(cb => parseInt(cb.value));

            if (selectedIds.length === 0) return;

            if (confirm(`Are you sure you want to delete ${selectedIds.length} selected consumable(s)?`)) {
                fetch('@Url.Action("BulkDeleteConsumables", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(selectedIds)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting consumables.');
                });
            }
        });
    </script>
}