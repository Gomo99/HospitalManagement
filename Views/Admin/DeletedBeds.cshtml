@model IEnumerable<Bed>
@{
    ViewData["Title"] = "Deleted Beds";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Deleted Beds</h1>
        <div>
            <a asp-action="ListOfBeds" class="btn btn-primary me-2">
                <i class="fas fa-list"></i> Active Beds
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Deleted Bed Records</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAllDeletedBeds" />
                                </th>
                                <th>ID</th>
                                <th>Bed Number</th>
                                <th>Ward</th>
                                <th>Bed Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bed in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="select-deleted-bed" value="@bed.BedId" />
                                    </td>
                                    <td>@bed.BedId</td>
                                    <td>@bed.BedNumber</td>
                                    <td>
                                        @if (bed.Ward != null)
                                        {
                                            <span class="badge bg-info">@bed.Ward.WardName</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">No Ward</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@(bed.Status == BedStatus.Available ? "success" : "danger")">
                                            @bed.Status
                                        </span>
                                    </td>
                                    <td>
                                        <form asp-action="RestoreBeds" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@bed.BedId" />
                                            <button type="submit" class="btn btn-sm btn-success"
                                                    onclick="return confirm('Restore this bed?')">
                                                <i class="fas fa-trash-restore"></i> Restore
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <button id="bulkRestoreBedsBtn" class="btn btn-success" disabled>
                        <i class="fas fa-trash-restore"></i> Restore Selected
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No deleted beds found.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Select All functionality for deleted beds
        document.getElementById('selectAllDeletedBeds').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.select-deleted-bed');
            checkboxes.forEach(cb => cb.checked = this.checked);
            updateBulkRestoreBedsButton();
        });

        // Update bulk restore button
        function updateBulkRestoreBedsButton() {
            const selected = document.querySelectorAll('.select-deleted-bed:checked');
            const restoreBtn = document.getElementById('bulkRestoreBedsBtn');

            restoreBtn.disabled = selected.length === 0;
        }

        // Attach event listeners
        document.querySelectorAll('.select-deleted-bed').forEach(cb => {
            cb.addEventListener('change', updateBulkRestoreBedsButton);
        });

        // Bulk Restore functionality for deleted beds
        document.getElementById('bulkRestoreBedsBtn').addEventListener('click', function() {
            const selectedIds = Array.from(document.querySelectorAll('.select-deleted-bed:checked'))
                .map(cb => parseInt(cb.value));

            if (selectedIds.length === 0) return;

            if (confirm(`Are you sure you want to restore ${selectedIds.length} selected bed(s)?`)) {
                // Create form and submit
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("BulkRestoreBeds", "Admin")';

                // Add anti-forgery token
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token;
                form.appendChild(tokenInput);

                // Add bed IDs
                selectedIds.forEach(id => {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'ids';
                    input.value = id;
                    form.appendChild(input);
                });

                document.body.appendChild(form);
                form.submit();
            }
        });
    </script>
}