@model Ward
@{
    ViewData["Title"] = "Ward Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Ward Details</h1>
        <div>
            <a asp-action="EditWard" asp-route-id="@Model.WardId" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="ListOfWards" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Ward Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Ward ID:</dt>
                <dd class="col-sm-9">@Model.WardId</dd>

                <dt class="col-sm-3">Ward Name:</dt>
                <dd class="col-sm-9">@Model.WardName</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "No description" : Model.Description)</dd>

                <dt class="col-sm-3">Capacity:</dt>
                <dd class="col-sm-9">@Model.Capacity beds</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.WardStatus == Status.Active ? "success" : "danger")">
                        @Model.WardStatus
                    </span>
                </dd>

            </dl>
        </div>
    </div>

    <!-- Beds in this Ward -->
    @if (Model.Beds != null && Model.Beds.Any())
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Beds in this Ward</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Bed Number</th>
                                <th>Bed Status</th>
                                <th>Record Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bed in Model.Beds)
                            {
                                <tr>
                                    <td>@bed.BedNumber</td>
                                    <td>
                                        <span class="badge bg-@(bed.Status == BedStatus.Available ? "success" : "danger")">
                                            @bed.Status
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(bed.BedStatus == Status.Active ? "success" : "secondary")">
                                            @bed.BedStatus
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="ListOfWards" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Ward List
        </a>
    </div>
</div>