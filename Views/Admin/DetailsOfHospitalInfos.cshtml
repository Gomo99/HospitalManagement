@model HospitalInfo
@{
    ViewData["Title"] = "Hospital Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Hospital Details</h1>
        <div>
            <a asp-action="EditHospitalInfos" asp-route-id="@Model.HospitalInfoId" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="ListOfHospitalInfos" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Hospital Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Hospital ID:</dt>
                <dd class="col-sm-9">@Model.HospitalInfoId</dd>

                <dt class="col-sm-3">Hospital Name:</dt>
                <dd class="col-sm-9">@Model.HospitalName</dd>

                <dt class="col-sm-3">Address:</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Phone Number:</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Website:</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.WebsiteUrl))
                    {
                        <a href="@Model.WebsiteUrl" target="_blank">@Model.WebsiteUrl</a>
                    }
                    else
                    {
                        <span>Not provided</span>
                    }
                </dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.HospitalInfoStatus == Status.Active ? "success" : "danger")">
                        @Model.HospitalInfoStatus
                    </span>
                </dd>

                
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="ListOfHospitalInfos" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Hospital List
        </a>
    </div>
</div>