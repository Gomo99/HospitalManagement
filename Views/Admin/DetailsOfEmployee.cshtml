@model Employee
@{
    ViewData["Title"] = "Employee Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Employee Details</h1>
        <div>
            <a asp-action="EditEmployee" asp-route-id="@Model.EmployeeID" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="ListOfEmployees" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Employee Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Employee ID:</dt>
                <dd class="col-sm-9">@Model.EmployeeID</dd>

                <dt class="col-sm-3">Full Name:</dt>
                <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

                <dt class="col-sm-3">Username:</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Gender:</dt>
                <dd class="col-sm-9">@Model.Gender</dd>

                <dt class="col-sm-3">Role:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@GetRoleBadgeColor(Model.Role)">
                        @Model.Role
                    </span>
                </dd>

                <dt class="col-sm-3">Hire Date:</dt>
                <dd class="col-sm-9">@(Model.HireDate?.ToString("yyyy-MM-dd") ?? "Not set")</dd>

                <dt class="col-sm-3">Account Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.IsActive == Status.Active ? "success" : "danger")">
                        @Model.IsActive
                    </span>
                </dd>

                
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="ListOfEmployees" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Employees List
        </a>
    </div>
</div>

@functions {
    string GetRoleBadgeColor(UserRole role)
    {
        return role switch
        {
            UserRole.ADMINISTRATOR => "danger",
            UserRole.DOCTOR => "primary",
            UserRole.NURSE => "success",
            UserRole.WARDADMIN => "warning",
            _ => "secondary"
        };
    }
}