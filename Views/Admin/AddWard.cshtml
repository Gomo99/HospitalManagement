@model Ward
@{
    ViewData["Title"] = "Add New Ward";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Add New Ward</h1>
        <a asp-action="ListOfWards" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Ward Details</h5>
        </div>
        <div class="card-body">
            <form asp-action="AddWard" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="WardName" class="form-label">Ward Name *</label>
                    <input asp-for="WardName" class="form-control" required />
                    <span asp-validation-for="WardName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Capacity" class="form-label">Capacity *</label>
                    <input asp-for="Capacity" class="form-control" type="number" min="1" required />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                    <small class="form-text text-muted">Maximum number of beds this ward can hold.</small>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary me-md-2">
                        <i class="fas fa-save"></i> Save Ward
                    </button>
                    <a asp-action="ListOfWards" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}