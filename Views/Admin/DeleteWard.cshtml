@model Ward
@{
    ViewData["Title"] = "Delete Ward";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Delete Ward</h1>
        <a asp-action="ListOfWards" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Confirm Ward Deletion</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5 class="alert-heading">
                    <i class="fas fa-exclamation-triangle"></i> Important Warning!
                </h5>
                <p>Deleting this ward will affect all beds assigned to it. This action will:</p>
                <ul>
                    <li>Mark the ward as deleted (soft delete)</li>
                    <li>Not delete the beds, but they will reference a deleted ward</li>
                    <li>Make the ward unavailable for new admissions</li>
                </ul>
            </div>

            <h5>Ward Details</h5>
            <dl class="row">
                <dt class="col-sm-3">Ward ID:</dt>
                <dd class="col-sm-9">@Model.WardId</dd>

                <dt class="col-sm-3">Ward Name:</dt>
                <dd class="col-sm-9">@Model.WardName</dd>

                <dt class="col-sm-3">Capacity:</dt>
                <dd class="col-sm-9">@Model.Capacity beds</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</dd>

                <dt class="col-sm-3">Current Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-success">@Model.WardStatus</span>
                </dd>
            </dl>

            <form asp-action="DeleteWardConfirmed" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="WardId" />

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-danger me-md-2"
                            onclick="return confirm('Are you absolutely sure? This will affect all beds in this ward.')">
                        <i class="fas fa-trash"></i> Confirm Delete
                    </button>
                    <a asp-action="ListOfWards" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>