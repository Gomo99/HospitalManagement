@model IEnumerable<Condition>
@{
    ViewData["Title"] = "Medical Conditions";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Medical Condition Management</h1>
        <div>
            <a asp-action="AddConditions" class="btn btn-primary me-2">
                <i class="fas fa-plus"></i> Add New Condition
            </a>
            <a asp-action="ConditionReport" class="btn btn-secondary">
                <i class="fas fa-file-pdf"></i> Generate Report
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Active Medical Conditions</h5>
            <div>
                <a asp-action="DeletedCondition" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-trash"></i> View Deleted
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAllConditions" />
                                </th>
                                <th>ID</th>
                                <th>Condition Name</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var condition in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="select-condition-item" value="@condition.ConditionId" />
                                    </td>
                                    <td>@condition.ConditionId</td>
                                    <td>@condition.Name</td>
                                    <td>@(string.IsNullOrEmpty(condition.Description) ? "-" : condition.Description)</td>
                                    <td>
                                        <span class="badge bg-@(condition.ConditionStatus == Status.Active ? "success" : "danger")">
                                            @condition.ConditionStatus
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="DetailsOfConditions" asp-route-id="@condition.ConditionId"
                                               class="btn btn-sm btn-info me-1" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="EditCondtions" asp-route-id="@condition.ConditionId"
                                               class="btn btn-sm btn-warning me-1" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="DeleteCondition" asp-route-id="@condition.ConditionId"
                                               class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <button id="bulkDeleteConditionsBtn" class="btn btn-danger me-2" disabled>
                        <i class="fas fa-trash"></i> Delete Selected
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No medical conditions found. <a asp-action="AddConditions">Add a new condition</a>.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Select All functionality for conditions
        document.getElementById('selectAllConditions').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.select-condition-item');
            checkboxes.forEach(cb => cb.checked = this.checked);
            updateBulkConditionButtons();
        });

        // Update bulk buttons
        function updateBulkConditionButtons() {
            const selected = document.querySelectorAll('.select-condition-item:checked');
            const deleteBtn = document.getElementById('bulkDeleteConditionsBtn');

            deleteBtn.disabled = selected.length === 0;
        }

        // Attach event listeners
        document.querySelectorAll('.select-condition-item').forEach(cb => {
            cb.addEventListener('change', updateBulkConditionButtons);
        });

        // Bulk Delete functionality for conditions
        document.getElementById('bulkDeleteConditionsBtn').addEventListener('click', function() {
            const selectedIds = Array.from(document.querySelectorAll('.select-condition-item:checked'))
                .map(cb => parseInt(cb.value));

            if (selectedIds.length === 0) return;

            if (confirm(`Are you sure you want to delete ${selectedIds.length} selected condition(s)?`)) {
                fetch('@Url.Action("BulkDeleteConditions", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(selectedIds)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting conditions.');
                });
            }
        });
    </script>
}