@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employee Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Employee Management</h1>
        <div>
            <a asp-action="AddEmployee" class="btn btn-primary me-2">
                <i class="fas fa-user-plus"></i> Add New Employee
            </a>
            <a asp-action="EmployeeReport" class="btn btn-secondary">
                <i class="fas fa-file-pdf"></i> Generate Report
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Active Employees</h5>
            <div>
                <a asp-action="DeletedEmployees" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-trash"></i> View Deleted
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAllEmployees" />
                                </th>
                                <th>ID</th>
                                <th>Full Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="select-employee-item" value="@employee.EmployeeID" />
                                    </td>
                                    <td>@employee.EmployeeID</td>
                                    <td>@employee.FirstName @employee.LastName</td>
                                    <td>@employee.UserName</td>
                                    <td>@employee.Email</td>
                                    <td>
                                        <span class="badge bg-@GetRoleBadgeColor(employee.Role)">
                                            @employee.Role
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(employee.IsActive == Status.Active ? "success" : "danger")">
                                            @employee.IsActive
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="DetailsOfEmployee" asp-route-id="@employee.EmployeeID"
                                               class="btn btn-sm btn-info me-1" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="EditEmployee" asp-route-id="@employee.EmployeeID"
                                               class="btn btn-sm btn-warning me-1" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="DeleteEmployee" asp-route-id="@employee.EmployeeID"
                                               class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <button id="bulkDeleteEmployeesBtn" class="btn btn-danger me-2" disabled>
                        <i class="fas fa-trash"></i> Delete Selected
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No employees found. <a asp-action="AddEmployee">Add a new employee</a>.
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetRoleBadgeColor(UserRole role)
    {
        return role switch
        {
            UserRole.ADMINISTRATOR => "danger",
            UserRole.DOCTOR => "primary",
            UserRole.NURSE => "success",
            UserRole.WARDADMIN => "warning",
            _ => "secondary"
        };
    }
}

@section Scripts {
    <script>
        // Select All functionality for employees
        document.getElementById('selectAllEmployees').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.select-employee-item');
            checkboxes.forEach(cb => cb.checked = this.checked);
            updateBulkEmployeeButtons();
        });

        // Update bulk buttons
        function updateBulkEmployeeButtons() {
            const selected = document.querySelectorAll('.select-employee-item:checked');
            const deleteBtn = document.getElementById('bulkDeleteEmployeesBtn');

            deleteBtn.disabled = selected.length === 0;
        }

        // Attach event listeners
        document.querySelectorAll('.select-employee-item').forEach(cb => {
            cb.addEventListener('change', updateBulkEmployeeButtons);
        });

        // Bulk Delete functionality for employees
        document.getElementById('bulkDeleteEmployeesBtn').addEventListener('click', function() {
            const selectedIds = Array.from(document.querySelectorAll('.select-employee-item:checked'))
                .map(cb => parseInt(cb.value));

            if (selectedIds.length === 0) return;

            if (confirm(`Are you sure you want to delete ${selectedIds.length} selected employee(s)?`)) {
                // Create form and submit
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("BulkDeleteEmployees", "Admin")';

                // Add anti-forgery token
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token;
                form.appendChild(tokenInput);

                // Add employee IDs
                selectedIds.forEach(id => {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'ids';
                    input.value = id;
                    form.appendChild(input);
                });

                document.body.appendChild(form);
                form.submit();
            }
        });
    </script>
}