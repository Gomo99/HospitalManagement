@model IEnumerable<Bed>
@{
    ViewData["Title"] = "Bed Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Bed Management</h1>
        <div>
            <a asp-action="AddBed" class="btn btn-primary me-2">
                <i class="fas fa-plus"></i> Add New Bed
            </a>
            <a asp-action="BedReport" class="btn btn-secondary">
                <i class="fas fa-file-pdf"></i> Generate Report
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Active Beds</h5>
            <div>
                <a asp-action="DeletedBeds" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-trash"></i> View Deleted
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAllBeds" />
                                </th>
                                <th>ID</th>
                                <th>Bed Number</th>
                                <th>Ward</th>
                                <th>Bed Status</th>
                                <th>Record Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bed in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="select-bed-item" value="@bed.BedId" />
                                    </td>
                                    <td>@bed.BedId</td>
                                    <td>@bed.BedNumber</td>
                                    <td>
                                        @if (bed.Ward != null)
                                        {
                                            <span class="badge bg-info">@bed.Ward.WardName</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">No Ward</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@(bed.Status == BedStatus.Available ? "success" : "danger")">
                                            @bed.Status
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(bed.BedStatus == Status.Active ? "success" : "secondary")">
                                            @bed.BedStatus
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="DetailsOfBeds" asp-route-id="@bed.BedId"
                                               class="btn btn-sm btn-info me-1" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="EditBeds" asp-route-id="@bed.BedId"
                                               class="btn btn-sm btn-warning me-1" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="DeleteBed" asp-route-id="@bed.BedId"
                                               class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <button id="bulkDeleteBedsBtn" class="btn btn-danger me-2" disabled>
                        <i class="fas fa-trash"></i> Delete Selected
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No beds found. <a asp-action="AddBed">Add a new bed</a>.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Select All functionality for beds
        document.getElementById('selectAllBeds').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.select-bed-item');
            checkboxes.forEach(cb => cb.checked = this.checked);
            updateBulkBedButtons();
        });

        // Update bulk buttons
        function updateBulkBedButtons() {
            const selected = document.querySelectorAll('.select-bed-item:checked');
            const deleteBtn = document.getElementById('bulkDeleteBedsBtn');

            deleteBtn.disabled = selected.length === 0;
        }

        // Attach event listeners
        document.querySelectorAll('.select-bed-item').forEach(cb => {
            cb.addEventListener('change', updateBulkBedButtons);
        });

        // Bulk Delete functionality for beds
        document.getElementById('bulkDeleteBedsBtn').addEventListener('click', function() {
            const selectedIds = Array.from(document.querySelectorAll('.select-bed-item:checked'))
                .map(cb => parseInt(cb.value));

            if (selectedIds.length === 0) return;

            if (confirm(`Are you sure you want to delete ${selectedIds.length} selected bed(s)?`)) {
                // Create form and submit
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("BulkDeleteBeds", "Admin")';

                // Add anti-forgery token
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token;
                form.appendChild(tokenInput);

                // Add bed IDs
                selectedIds.forEach(id => {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'ids';
                    input.value = id;
                    form.appendChild(input);
                });

                document.body.appendChild(form);
                form.submit();
            }
        });
    </script>
}