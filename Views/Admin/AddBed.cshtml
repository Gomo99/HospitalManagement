@model Bed
@{
    ViewData["Title"] = "Add New Bed";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Add New Bed</h1>
        <a asp-action="ListOfBeds" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Bed Details</h5>
        </div>
        <div class="card-body">
            <form asp-action="AddBed" method="post">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="BedNumber" class="form-label">Bed Number *</label>
                            <input asp-for="BedNumber" class="form-control" required />
                            <span asp-validation-for="BedNumber" class="text-danger"></span>
                            <small class="form-text text-muted">Unique identifier for the bed (e.g., "B-101")</small>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="WardId" class="form-label">Ward *</label>
                            <select asp-for="WardId" asp-items="@(ViewBag.WardList as SelectList)"
                                    class="form-select" required>
                                <option value="">-- Select Ward --</option>
                            </select>
                            <span asp-validation-for="WardId" class="text-danger"></span>
                            <small class="form-text text-muted">Ward where this bed is located</small>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary me-md-2">
                        <i class="fas fa-save"></i> Save Bed
                    </button>
                    <a asp-action="ListOfBeds" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}