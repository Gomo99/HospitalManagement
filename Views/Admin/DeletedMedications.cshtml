@model IEnumerable<Medication>
@{
    ViewData["Title"] = "Deleted Medications";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Deleted Medications</h1>
        <div>
            <a asp-action="ListOfMedication" class="btn btn-primary me-2">
                <i class="fas fa-list"></i> Active Medications
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Deleted Medication Records</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAllDeletedMedications" />
                                </th>
                                <th>ID</th>
                                <th>Medication Name</th>
                                <th>Type</th>
                                <th>Quantity</th>
                                <th>Expiry Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var medication in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="select-deleted-medication" value="@medication.MedicationId" />
                                    </td>
                                    <td>@medication.MedicationId</td>
                                    <td>@medication.Name</td>
                                    <td>
                                        <span class="badge bg-info">@medication.Type</span>
                                    </td>
                                    <td>@medication.Quantity</td>
                                    <td>@medication.ExpiryDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <form asp-action="RestoreMedications" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@medication.MedicationId" />
                                            <button type="submit" class="btn btn-sm btn-success"
                                                    onclick="return confirm('Restore this medication?')">
                                                <i class="fas fa-trash-restore"></i> Restore
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <button id="bulkRestoreMedicationsBtn" class="btn btn-success" disabled>
                        <i class="fas fa-trash-restore"></i> Restore Selected
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No deleted medications found.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Select All functionality for deleted medications
        document.getElementById('selectAllDeletedMedications').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.select-deleted-medication');
            checkboxes.forEach(cb => cb.checked = this.checked);
            updateBulkRestoreMedicationsButton();
        });

        // Update bulk restore button
        function updateBulkRestoreMedicationsButton() {
            const selected = document.querySelectorAll('.select-deleted-medication:checked');
            const restoreBtn = document.getElementById('bulkRestoreMedicationsBtn');

            restoreBtn.disabled = selected.length === 0;
        }

        // Attach event listeners
        document.querySelectorAll('.select-deleted-medication').forEach(cb => {
            cb.addEventListener('change', updateBulkRestoreMedicationsButton);
        });

        // Bulk Restore functionality for deleted medications
        document.getElementById('bulkRestoreMedicationsBtn').addEventListener('click', function() {
            const selectedIds = Array.from(document.querySelectorAll('.select-deleted-medication:checked'))
                .map(cb => parseInt(cb.value));

            if (selectedIds.length === 0) return;

            if (confirm(`Are you sure you want to restore ${selectedIds.length} selected medication(s)?`)) {
                fetch('@Url.Action("BulkRestoreMedications", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(selectedIds)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while restoring medications.');
                });
            }
        });
    </script>
}