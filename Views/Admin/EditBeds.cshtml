@model Bed
@{
    ViewData["Title"] = "Edit Bed";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Edit Bed</h1>
        <a asp-action="ListOfBeds" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Edit Bed Details</h5>
        </div>
        <div class="card-body">
            <form asp-action="EditBeds" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="BedId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="BedNumber" class="form-label">Bed Number *</label>
                            <input asp-for="BedNumber" class="form-control" required />
                            <span asp-validation-for="BedNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="WardId" class="form-label">Ward *</label>
                            <select asp-for="WardId" asp-items="@(ViewBag.WardList as SelectList)"
                                    class="form-select" required>
                                <option value="">-- Select Ward --</option>
                            </select>
                            <span asp-validation-for="WardId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary me-md-2">
                        <i class="fas fa-save"></i> Update Bed
                    </button>
                    <a asp-action="ListOfBeds" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}