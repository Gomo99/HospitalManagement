@model Allergy
@{
    ViewData["Title"] = "Allergy Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Allergy Details</h1>
        <div>
            <a asp-action="EditAllergy" asp-route-id="@Model.AllergyId" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="ListOfAllergies" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Allergy Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Allergy ID:</dt>
                <dd class="col-sm-9">@Model.AllergyId</dd>

                <dt class="col-sm-3">Allergy Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "No description" : Model.Description)</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.AlleryStatus == Status.Active ? "success" : "danger")">
                        @Model.AlleryStatus
                    </span>
                </dd>

                

                
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="ListOfAllergies" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Allergy List
        </a>
    </div>
</div>