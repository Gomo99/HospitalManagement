@model IEnumerable<Condition>
@{
    ViewData["Title"] = "Deleted Medical Conditions";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Deleted Medical Conditions</h1>
        <div>
            <a asp-action="ListOfConditions" class="btn btn-primary me-2">
                <i class="fas fa-list"></i> Active Conditions
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Deleted Condition Records</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAllDeletedConditions" />
                                </th>
                                <th>ID</th>
                                <th>Condition Name</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var condition in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="select-deleted-condition" value="@condition.ConditionId" />
                                    </td>
                                    <td>@condition.ConditionId</td>
                                    <td>@condition.Name</td>
                                    <td>@(string.IsNullOrEmpty(condition.Description) ? "-" : condition.Description)</td>
                                    <td>
                                        <form asp-action="RestoreCondition" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@condition.ConditionId" />
                                            <button type="submit" class="btn btn-sm btn-success"
                                                    onclick="return confirm('Restore this condition?')">
                                                <i class="fas fa-trash-restore"></i> Restore
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <button id="bulkRestoreConditionsBtn" class="btn btn-success" disabled>
                        <i class="fas fa-trash-restore"></i> Restore Selected
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No deleted medical conditions found.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Select All functionality for deleted conditions
        document.getElementById('selectAllDeletedConditions').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.select-deleted-condition');
            checkboxes.forEach(cb => cb.checked = this.checked);
            updateBulkRestoreConditionsButton();
        });

        // Update bulk restore button
        function updateBulkRestoreConditionsButton() {
            const selected = document.querySelectorAll('.select-deleted-condition:checked');
            const restoreBtn = document.getElementById('bulkRestoreConditionsBtn');

            restoreBtn.disabled = selected.length === 0;
        }

        // Attach event listeners
        document.querySelectorAll('.select-deleted-condition').forEach(cb => {
            cb.addEventListener('change', updateBulkRestoreConditionsButton);
        });

        // Bulk Restore functionality for deleted conditions
        document.getElementById('bulkRestoreConditionsBtn').addEventListener('click', function() {
            const selectedIds = Array.from(document.querySelectorAll('.select-deleted-condition:checked'))
                .map(cb => parseInt(cb.value));

            if (selectedIds.length === 0) return;

            if (confirm(`Are you sure you want to restore ${selectedIds.length} selected condition(s)?`)) {
                fetch('@Url.Action("BulkRestoreConditions", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(selectedIds)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while restoring conditions.');
                });
            }
        });
    </script>
}