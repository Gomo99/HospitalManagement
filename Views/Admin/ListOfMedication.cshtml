@model IEnumerable<Medication>
@{
    ViewData["Title"] = "Medication Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Medication Management</h1>
        <div>
            <a asp-action="AddMedication" class="btn btn-primary me-2">
                <i class="fas fa-plus"></i> Add New Medication
            </a>
            <a asp-action="MedicationReport" class="btn btn-secondary">
                <i class="fas fa-file-pdf"></i> Generate Report
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Active Medications</h5>
            <div>
                <a asp-action="DeletedMedications" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-trash"></i> View Deleted
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAllMedications" />
                                </th>
                                <th>ID</th>
                                <th>Medication Name</th>
                                <th>Type</th>
                                <th>Quantity</th>
                                <th>Expiry Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var medication in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="select-medication-item" value="@medication.MedicationId" />
                                    </td>
                                    <td>@medication.MedicationId</td>
                                    <td>@medication.Name</td>
                                    <td>
                                        <span class="badge bg-info">@medication.Type</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(medication.Quantity > 50 ? "success" : medication.Quantity > 10 ? "warning" : "danger")">
                                            @medication.Quantity
                                        </span>
                                    </td>
                                    <td>
                                        <span class="@(medication.ExpiryDate < DateTime.Now.AddDays(60) ? "text-danger" : "")">
                                            @medication.ExpiryDate.ToString("yyyy-MM-dd")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(medication.MedicationStatus == Status.Active ? "success" : "danger")">
                                            @medication.MedicationStatus
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="DetailsOfMedication" asp-route-id="@medication.MedicationId"
                                               class="btn btn-sm btn-info me-1" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="EditMedication" asp-route-id="@medication.MedicationId"
                                               class="btn btn-sm btn-warning me-1" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="DeleteMedication" asp-route-id="@medication.MedicationId"
                                               class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <button id="bulkDeleteMedicationsBtn" class="btn btn-danger me-2" disabled>
                        <i class="fas fa-trash"></i> Delete Selected
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No medications found. <a asp-action="AddMedication">Add a new medication</a>.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Select All functionality for medications
        document.getElementById('selectAllMedications').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.select-medication-item');
            checkboxes.forEach(cb => cb.checked = this.checked);
            updateBulkMedicationButtons();
        });

        // Update bulk buttons
        function updateBulkMedicationButtons() {
            const selected = document.querySelectorAll('.select-medication-item:checked');
            const deleteBtn = document.getElementById('bulkDeleteMedicationsBtn');

            deleteBtn.disabled = selected.length === 0;
        }

        // Attach event listeners
        document.querySelectorAll('.select-medication-item').forEach(cb => {
            cb.addEventListener('change', updateBulkMedicationButtons);
        });

        // Bulk Delete functionality for medications
        document.getElementById('bulkDeleteMedicationsBtn').addEventListener('click', function() {
            const selectedIds = Array.from(document.querySelectorAll('.select-medication-item:checked'))
                .map(cb => parseInt(cb.value));

            if (selectedIds.length === 0) return;

            if (confirm(`Are you sure you want to delete ${selectedIds.length} selected medication(s)?`)) {
                fetch('@Url.Action("BulkDeleteMedications", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(selectedIds)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting medications.');
                });
            }
        });
    </script>
}