@model IEnumerable<Allergy>
@{
    ViewData["Title"] = "Allergy List";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Allergy Management</h1>
        <div>
            <a asp-action="AddAllergy" class="btn btn-primary me-2">
                <i class="fas fa-plus"></i> Add New Allergy
            </a>
            <a asp-action="AllergyReport" class="btn btn-secondary">
                <i class="fas fa-file-pdf"></i> Generate Report
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Active Allergies</h5>
            <div>
                <a asp-action="DeletedAllergy" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-trash"></i> View Deleted
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAll" />
                                </th>
                                <th>ID</th>
                                <th>Allergy Name</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="select-item" value="@item.AllergyId" />
                                    </td>
                                    <td>@item.AllergyId</td>
                                    <td>@item.Name</td>
                                    <td>@(string.IsNullOrEmpty(item.Description) ? "-" : item.Description)</td>
                                    <td>
                                        <span class="badge bg-@(item.AlleryStatus == Status.Active ? "success" : "danger")">
                                            @item.AlleryStatus
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="DetailsOfAllergies" asp-route-id="@item.AllergyId"
                                               class="btn btn-sm btn-info me-1" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="EditAllergy" asp-route-id="@item.AllergyId"
                                               class="btn btn-sm btn-warning me-1" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="DeleteAllergy" asp-route-id="@item.AllergyId"
                                               class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <button id="bulkDeleteBtn" class="btn btn-danger me-2" disabled>
                        <i class="fas fa-trash"></i> Delete Selected
                    </button>
                    <button id="bulkRestoreBtn" class="btn btn-success" disabled style="display: none;">
                        <i class="fas fa-trash-restore"></i> Restore Selected
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No allergies found. <a asp-action="AddAllergy">Add a new allergy</a>.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Select All functionality
        document.getElementById('selectAll').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.select-item');
            checkboxes.forEach(cb => cb.checked = this.checked);
            updateBulkButtons();
        });

        // Update bulk buttons based on selection
        function updateBulkButtons() {
            const selected = document.querySelectorAll('.select-item:checked');
            const deleteBtn = document.getElementById('bulkDeleteBtn');
            const restoreBtn = document.getElementById('bulkRestoreBtn');

            if (selected.length > 0) {
                deleteBtn.disabled = false;
                restoreBtn.disabled = false;
            } else {
                deleteBtn.disabled = true;
                restoreBtn.disabled = true;
            }
        }

        // Attach event listeners to individual checkboxes
        document.querySelectorAll('.select-item').forEach(cb => {
            cb.addEventListener('change', updateBulkButtons);
        });

        // Bulk Delete functionality
        document.getElementById('bulkDeleteBtn').addEventListener('click', function() {
            const selectedIds = Array.from(document.querySelectorAll('.select-item:checked'))
                .map(cb => parseInt(cb.value));

            if (selectedIds.length === 0) return;

            if (confirm(`Are you sure you want to delete ${selectedIds.length} selected allergy(s)?`)) {
                fetch('@Url.Action("DeleteMultipleAjax", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(selectedIds)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting allergies.');
                });
            }
        });

        // Bulk Restore functionality
        document.getElementById('bulkRestoreBtn').addEventListener('click', function() {
            const selectedIds = Array.from(document.querySelectorAll('.select-item:checked'))
                .map(cb => parseInt(cb.value));

            if (selectedIds.length === 0) return;

            if (confirm(`Are you sure you want to restore ${selectedIds.length} selected allergy(s)?`)) {
                fetch('@Url.Action("RestoreMultipleAjax", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(selectedIds)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while restoring allergies.');
                });
            }
        });
    </script>
}