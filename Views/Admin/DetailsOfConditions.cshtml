@model Condition
@{
    ViewData["Title"] = "Condition Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Medical Condition Details</h1>
        <div>
            <a asp-action="EditCondtions" asp-route-id="@Model.ConditionId" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="ListOfConditions" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Condition Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Condition ID:</dt>
                <dd class="col-sm-9">@Model.ConditionId</dd>

                <dt class="col-sm-3">Condition Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "No description" : Model.Description)</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.ConditionStatus == Status.Active ? "success" : "danger")">
                        @Model.ConditionStatus
                    </span>
                </dd>

              
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="ListOfConditions" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Conditions List
        </a>
    </div>
</div>